    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and debug numsim",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/../build/numsim",
            "args": ["../parameters.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build numsim",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "debug numsim",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/../build/numsim",
            "args": ["../parameters.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}